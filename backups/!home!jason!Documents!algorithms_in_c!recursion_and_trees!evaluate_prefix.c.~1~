/**************************************************
Describe: this program evaluate a prefix expression
Author: sun
Date: Oct 26, 2011
**************************************************/
#include <stdio.h>

char a[50];
int i;

int val()
{
     int x = 0;
     while (a[i] == ' ')
          i++;
     if (a[i] == '+')
     {
          i++;
          return eval()+eval();
     }
     if (a[i] == '*')
     {
          i++;
          return eval()*eval();
     }
     while ((a[i] >= '0') && (a[i] <= '9'))
          x = 10*x + (a[i++] - '0');
     return x;
}

int main(int argc, char *argv[])
{
     printf("please input prefix expression : ");
     scanf("%s", a);
     printf("the result of prefix expression is : %d", val());
     return 0;
}
