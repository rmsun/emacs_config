#include "apue.h"
#include <ctype.h>

int main(int argc, char *argv[])
{
     int c;
     while ((c = getchar()) != EOF)
     {
          if (ifupper(c))
               c = tolower(c);
          if (putchar(c) == EOF)
               err_sys("output error");
          if (c == '\n')
               fflush(stdout);
     }
     
     return 0;
}
